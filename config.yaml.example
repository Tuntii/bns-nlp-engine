# Example configuration file for bns-nlp-engine
# Copy this file to config.yaml and customize as needed

# Logging configuration
logging:
  level: INFO  # DEBUG, INFO, WARNING, ERROR
  format: json  # json or text
  output: stdout  # stdout or file path

# Telemetry configuration (opt-in)
telemetry:
  enabled: false  # Set to true to enable anonymous usage statistics
  endpoint: null  # Optional custom telemetry endpoint

# Preprocessing configuration
preprocess:
  lowercase: true
  remove_punctuation: true
  remove_stopwords: true
  lemmatize: true
  batch_size: 32

# Embedding configuration
embed:
  provider: openai  # openai, cohere, huggingface
  model: text-embedding-3-small  # Model name for the provider
  batch_size: 16
  use_gpu: true  # Use GPU if available (for local models)
  # api_key: ${BNSNLP_EMBED_API_KEY}  # Set via environment variable

# Search configuration
search:
  provider: faiss  # qdrant, pinecone, faiss
  top_k: 10
  similarity_threshold: 0.7
  # collection: bnsnlp  # Collection/index name (for Qdrant/Pinecone)
  # url: http://localhost:6333  # Service URL (for Qdrant)
  # index_path: faiss.index  # Index file path (for FAISS)
  # dimension: 768  # Vector dimension (for FAISS)

# Classification configuration (optional)
